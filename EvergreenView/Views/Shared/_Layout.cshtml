@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContentAccessor
@inject IHttpContextAccessor HttpContextAccessor
@{
    var session = HttpContentAccessor.HttpContext?.Session;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - Evergreen</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Raleway&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700,800&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css"
          rel="stylesheet" type='text/css'>

    <link rel="stylesheet" href="~/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/css/animate.css">

    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">

    <link rel="stylesheet" href="~/css/aos.css">

    <link rel="stylesheet" href="~/css/ionicons.min.css">

    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/css/jquery.timepicker.css">


    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/icomoon.css">
    <link rel="stylesheet" href="~/css/style.css">

    <link rel="stylesheet" href="~/css/pagination.css">
    <link rel="stylesheet" href="~/css/chatbox.css"/>

    <link rel="icon" href="@Url.Content("~/images/favicon.png")"/>

    @await RenderSectionAsync("Styles", required: false)


    <style>
        ul.navbar-nav .nav-item > a {
            font-family: "Raleway", sans-serif;
            color: black !important;
            padding-left: 30px !important;
            padding-right: 0 !important;
            letter-spacing: 1px !important;
        }

        ul.navbar-nav > .nav-item:hover > a {
            color: red !important;
        }

        .text-ellipsis {
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }

        .img-hover-zoom {
            height: 250px;
            width: 250px;
            overflow: hidden;
        }

            .img-hover-zoom img {
                transform-origin: 50% 65%;
                transition: transform 5s, filter 3s ease-in-out;
            }

            .img-hover-zoom:hover img {
                transform: scale(3);
            }

        .avatar {
            width: 28px;
            height: auto;
            border-radius: 50%;
            object-fit: contain;
        }
    </style>


</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand text-danger" asp-controller="Home" asp-action="Index">Evergreen</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>

            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link @(HttpContextAccessor.HttpContext is {Request: {Path: {Value: "/AboutUs" } } } ? "text-danger" : "text-dark")" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(HttpContextAccessor.HttpContext is {Request: {Path: {Value: "/Blogs" } } } ? "text-danger" : "text-dark")" asp-area="" asp-controller="Blogs" asp-action="Index">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(HttpContextAccessor.HttpContext is {Request: {Path: {Value: "/Disease" } } } ? "text-danger" : "text-dark")" asp-area="" asp-controller="Disease" asp-action="Index">Disease</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(HttpContextAccessor.HttpContext is {Request: {Path: {Value: "/Medicine" } } } ? "text-danger" : "text-dark")" asp-area="" asp-controller="Medicine" asp-action="Index">Medicine</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(HttpContextAccessor.HttpContext is {Request: {Path: {Value: "/Treatment" } } } ? "text-danger" : "text-dark")" asp-area="" asp-controller="Treatment" asp-action="Index">Treatment</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(HttpContextAccessor.HttpContext is {Request: {Path: {Value: "/Service" } } } ? "text-danger" : "text-dark")" asp-area="" asp-controller="Service" asp-action="Index">Service</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(HttpContextAccessor.HttpContext is {Request: {Path: {Value: "/FAQs" } } } ? "text-danger" : "text-dark")" asp-area="" asp-controller="FAQs" asp-action="Index">FAQs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(HttpContextAccessor.HttpContext is {Request: {Path: {Value: "/ImageDetection" } } } ? "text-danger" : "text-dark")" asp-area="" asp-controller="ImageDetection" asp-action="Index">Detect</a>
                    </li>

                    @if (session.GetString("n") != null)
                    {
                        var avatarUrl = @session.GetString("a");
                        <li class="nav-item">
                            <a class="nav-link @(HttpContextAccessor.HttpContext is {Request: {Path: {Value: "/User" } } } ? "text-danger" : "text-dark")" asp-area="" asp-controller="User" asp-action="Details" asp-route-id="@session.GetString("i")">
                                <img class="avatar" src='@avatarUrl' alt="Profile"/>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link @(HttpContextAccessor.HttpContext is {Request: {Path: {Value: "/Authentication/Login" } } } ? "text-danger" : "text-dark")" asp-area="" asp-controller="Authentication" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(HttpContextAccessor.HttpContext is {Request: {Path: {Value: "/Authentication/Register" } } } ? "text-danger" : "text-dark")" asp-area="" asp-controller="Authentication" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<main class="mt-auto">
    @RenderBody()
</main>

<footer class="ftco-footer ftco-section" style="z-index: -99;">
    <div class="container">
        <div class="row">
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Evergreen</h2>
                    <p>A friendly application for farmer</p>
                    <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                        <li class="ftco-animate">
                            <a href="#">
                                <span class="icon-twitter"></span>
                            </a>
                        </li>
                        <li class="ftco-animate">
                            <a href="#">
                                <span class="icon-facebook"></span>
                            </a>
                        </li>
                        <li class="ftco-animate">
                            <a href="#">
                                <span class="icon-instagram"></span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4 ml-md-5">
                    <h2 class="ftco-heading-2">Menu</h2>
                    <ul class="list-unstyled">
                        <li>
                            <a href="#" class="py-2 d-block">Shop</a>
                        </li>
                        <li>
                            <a href="#" class="py-2 d-block">About</a>
                        </li>
                        <li>
                            <a href="#" class="py-2 d-block">Journal</a>
                        </li>
                        <li>
                            <a href="#" class="py-2 d-block">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Help</h2>
                    <div class="d-flex">
                        <ul class="list-unstyled mr-l-5 pr-l-3 mr-4">
                            <li>
                                <a href="#" class="py-2 d-block">Returns &amp; Exchange</a>
                            </li>
                            <li>
                                <a href="#" class="py-2 d-block">Terms &amp; Conditions</a>
                            </li>
                            <li>
                                <a href="#" class="py-2 d-block">Privacy Policy</a>
                            </li>
                        </ul>
                        <ul class="list-unstyled">
                            <li>
                                <a href="#" class="py-2 d-block">FAQs</a>
                            </li>
                            <li>
                                <a href="#" class="py-2 d-block">Contact</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Have a Questions?</h2>
                    <div class="block-23 mb-3">
                        <ul>
                            <li>
                                <span class="icon icon-map-marker"></span><span class="text">600 Nguyen Van Cu, Can Tho City</span>
                            </li>
                            <li>
                                <a href="#">
                                    <span class="icon icon-phone"></span><span class="text">+84 696 6969</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <span class="icon icon-envelope"></span><span class="text">evergreenproject.com</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

</footer>


<script src="~/js/jquery-3.2.1.min.js"></script>
<script src="~/js/jquery-migrate-3.0.1.min.js"></script>
<script src="~/js/popper.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/jquery.easing.1.3.js"></script>
<script src="~/js/jquery.waypoints.min.js"></script>
<script src="~/js/jquery.stellar.min.js"></script>
<script src="~/js/owl.carousel.min.js"></script>
<script src="~/js/jquery.magnific-popup.min.js"></script>
<script src="~/js/aos.js"></script>
<script src="~/js/jquery.animateNumber.min.js"></script>
<script src="~/js/bootstrap-datepicker.js"></script>
<script src="~/js/scrollax.min.js"></script>
<script src="~/js/main.js"></script>

<script src="~/js/pagination.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)

<partial name="_ChatBox.cshtml"/>
</body>
</html>