@model EvergreenAPI.Models.Thumbnail
@{
    ViewData["Title"] = "Delete thumbnail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<form asp-action="DeleteConfirmed" class="text-dark" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ThumbnailId" />
    <div class="form-group py-2">
        <label asp-for="Url" class="control-label"></label>
        <input asp-for="Url" class="form-control" readonly />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>

    <div class="form-group py-2">
        <label asp-for="AltText" class="control-label"></label>
        <input asp-for="AltText" class="form-control" readonly />
        <span asp-validation-for="AltText" class="text-danger"></span>
    </div>

    <div class="form-group py-2">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-success">Back To List</a>
    </div>
</form>