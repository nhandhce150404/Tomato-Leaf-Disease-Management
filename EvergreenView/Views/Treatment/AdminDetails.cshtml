@using Microsoft.Extensions.Configuration
@model EvergreenAPI.Models.Treatment
@inject IConfiguration Configuration
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = Model.Method;
    var thumbUrl = Configuration["BaseUrl"] + "/" + Model.Thumbnail.Url;
}

<div class="container">
    <div class="card card-outline-secondary">
        <div class="card-header">
            <h4 for="exampleFirst">Treatment Name: @Model.TreatmentName</h4>
        </div>
        <div class="card-body">
            <div class="row mt-4  justify-content-center">
                <div class="col-md-6">
                    <div>
                        <div>
                            <div class="img-hover-zoom flex-auto d-none d-md-block card-img-right" style="width: 400px; height: 400px; border-top-right-radius: 0.25rem; border-bottom-right-radius: 0.25rem;">
                                <img alt="Thumbnail" style="width: 100%; height: 400px; object-fit: cover;" src='@thumbUrl' data-holder-rendered="true">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="col-sm-12 pb-3">
                        <label for="method"> Treatment Description:</label>
                        <p id="method">@Model.Method</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="justify-content-between">
                <a asp-action="AdminIndex" class="btn btn-success px-5"> Back To List </a>
                <a asp-action="Delete" asp-route-id="@Model.TreatmentId" class="btn btn-danger px-5">
                    <i class="far fa-trash-alt"></i>
                </a>
                <a asp-action="Edit" asp-route-id="@Model.TreatmentId" class="btn btn-warning px-5">
                    <i class="fas fa-edit"></i>
                </a>

            </div>
        </div>
    </div>
</div>