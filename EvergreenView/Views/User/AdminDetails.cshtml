@model EvergreenAPI.Models.Account

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = Model.Username;
}



<div class="container">
    <div class="card card-outline-secondary text-dark">
        <div class="card-header">
            <h4 for="exampleFirst">Account Name: @Model.Username</h4>
        </div>
        <div class="card-body">
            <div class="row mt-4  justify-content-center">
                <div class="col-md-6">
                    <div>
                        <div>
                            @*<div class="img-hover-zoom flex-auto d-none d-md-block card-img-right" style="width: 400px; height: 400px; border-top-right-radius: 0.25rem; border-bottom-right-radius: 0.25rem;">
                                <img alt="Thumbnail" style="width: 100%; height: 400px; object-fit: cover;" src="@Model.Image.Url" data-holder-rendered="true">*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-sm-12 pb-3">
                    <label for="exampleFirst">@Model.FullName </label>
                    <h2>@Model.Username</h2>
                </div>
                <div class="col-sm-12 pb-3">
                    <label for="exampleCity">Professions: @Model.Professions</label>
                </div>
                <div class="col-sm-12 pb-3">
                    <label for="exampleCity">Email: @Model.Email</label>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="justify-content-between">
            <a asp-action="AdminEdit" asp-route-id="@Model.AccountId" class="btn btn-warning">
                <i class="fas fa-edit"></i>
            </a>
            <a asp-action="AdminIndex" asp-route-id="@Model.AccountId" class="btn btn-success">Back To List</a>
        </div>
    </div>
</div>

