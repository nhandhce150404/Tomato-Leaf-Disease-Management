@model EvergreenAPI.Models.Account

@{
    ViewData["Title"] = "Edit user profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="
https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.min.css" rel="stylesheet">

<h1>Update</h1>
<h4>Profile</h4>
<hr/>
<div class="container">
    <form asp-action="AdminEdit" method="post" class="text-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="AccountId"/>
        <input type="hidden" asp-for="Username"/>
        <input type="hidden" asp-for="Token"/>
        <input type="hidden" asp-for="Email"/>
        <input type="hidden" asp-for="Password"/>
        <input type="hidden" asp-for="ConfirmPassword"/>
        <input type="hidden" asp-for="PhoneNumber"/>

        <div class="form-group">
            <label asp-for="FullName" class="control-label"></label>
            <input asp-for="FullName" class="form-control"/>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Role" class="control-label"></label>
            <input asp-for="Role" class="form-control"/>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Professions" class="control-label"></label>
            <input asp-for="Professions" class="form-control"/>
            <span asp-validation-for="Professions" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary"/>
            <a asp-action="AdminIndex" class="btn btn-success">Back To List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.all.min.js"></script>
@if (TempData["error"] != null)
{
    <script>
        window.onload = () => {
            Swal.fire({
                position: 'center',
                icon: 'error',
                title: '@TempData["error"]',
                showConfirmButton: false,
                timer: 1500
            })
        }
    </script>
}